<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="next"
        app:layout_constraintTop_toBottomOf="@+id/input_lname_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp" />

    <EditText
        android:id="@+id/input_cid_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="ID NO."
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="106dp" />

    <EditText
        android:id="@+id/input_fname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="ชื่อ"
        app:layout_constraintTop_toBottomOf="@+id/input_cid_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="91dp" />

    <EditText
        android:id="@+id/input_lname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="นามสกุล"
        app:layout_constraintTop_toBottomOf="@id/input_fname_txt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp" />

</androidx.constraintlayout.widget.ConstraintLayout>